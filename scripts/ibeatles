    selected_element_hkl_array = []
    selected_element_name = ''
    
    # [['label', 'x0', 'y0', 'width', 'height', 'group'], ...]
    init_array = ['label_roi', '0', '0', '1', '1', '0']

    # [[use?, x0, y0, width, height, mean_counts]]
