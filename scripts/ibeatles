                'xaxis_file_index': None,
                'bragg_edge_selection': None}
    
    xaxis_button_ui = {'sample': {'file_index': None,
                                  'tof': None,
                                'lambda': None},
                       'ob': {'file_index': None,
                              'tof': None,
                              'lambda': None},
                       'normalized': {'file_index': None,
                                      'tof': None,
                                      'lambda': None},
                       'normalization': {'file_index': None,
                                         'tof': None,
                                         'lambda': None},
